<div class="card">
  <div class="card-img-top">
    <img src="{{img}}" alt="{{name}}" style="width:160px;height:240px">
  </div>
  <div class="card-body">
    <h2 class="card-title">Имя: {{name}}</h2>

    <p class="card-text"><b>Умения</b></p>
    <ul class="list-group"></ul>
    {{#each abilities}}
      <li class="list-group-item">{{ability.name}}</li>
    {{/each}}
    </ul>
  </div>
</div>